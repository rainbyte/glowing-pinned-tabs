{
    "manifest_version": 3,
    "name": "Glowing Pinned Tabs",
    "version": "0.0.1",

    "permissions": ["tabs"],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"],
            "run_at": "document_end"
        }
    ]
}